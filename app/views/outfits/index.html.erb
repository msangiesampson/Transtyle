  <div id="outfits" class="large-12 columns">
    <% @outfits.each do |outfit| %>
      <div class="outfit">
        <!---<%= outfit.name %>--->
        <label class="colour-marker" style='background-color: #<%= outfit.colour.colour %>'>&nbsp;</label>
        <%= image_tag outfit.image %>
        <div class="outfit-description">
          <%= outfit.description %>
        </div>
      </div>
    <% end %>
  </div>

<a href="/outfits/new" class="add-action">+</a>
